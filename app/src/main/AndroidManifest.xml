<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theneutrinos.struo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".Struo"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignInActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".GetDetailsAfterRegistration" />
        <activity android:name=".AddPostActivity" />
        <activity android:name=".ComplaintsActivity" />
        <activity android:name=".AddComplaintActivity" />
        <activity android:name=".FullscreenComplaintActivity" />
        <activity android:name=".SaleActivity" />
        <activity android:name=".AdvertiseActivity" />

        <service
            android:name=".GetDataService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".EventsActivity" />
        <activity android:name=".AddEventActivity" />
        <activity android:name=".ActuallyAddEventActivity" />
        <activity android:name=".ProfileActivity"></activity>
    </application>

</manifest>